package companymailgenerator1;
import java.util.ArrayList;
/**
 *
 * @author Student
 */
public class Company {
    ArrayList<String>employeeNIDList= new ArrayList<String>();
    ArrayList<String>employeeList= new ArrayList<String>();

    public ArrayList<String> getEmployeeNIDList() {
        return employeeNIDList;
    }

    public ArrayList<String> getEmployeeList() {
        return employeeList;
    }
    
     public void addEmployee(String employee, String nid) {
        this.employeeList.add(employee);
        this.employeeNIDList.add(nid);
    }
    
    
}

package companymailgenerator1;
import java.util.ArrayList;
/**
 *
 * @author Student
 */
public class MailGenerator {
    
    public static void generateMailAddress(Company com){
         ArrayList<String>employeename=com.getEmployeeList();
         ArrayList<String>employeeid=com.getEmployeeNIDList();
        for(int i = 0; i < com.getEmployeeList().size(); i++) {
            String[] emp = employeename.get(i).split(" ");
            String NID=employeeid.get(i);

            String firstname=emp[0].toLowerCase();
            String middlename=emp[1].toLowerCase();
            String lastname=emp[2].toLowerCase();

            System.out.println(NID);
            String n = NID.substring(5, 8);

            String mail=lastname+"."+n+"@mycompany.co";
            System.out.println(n);
            System.out.println(mail);
            
        }
       
    }

    
}

